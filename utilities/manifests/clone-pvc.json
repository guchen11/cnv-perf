{
  "apiVersion": "cdi.kubevirt.io/v1beta1",
  "kind": "DataVolume",
  "metadata": {
    "name": "{{PVC_NAME}}"
  },
  "spec": {
    "source": {
      "pvc": {
        "namespace": "{{namespace}}",
        "name": "{{PVC_SOURCE}}"
      }
    },
    "pvc": {
      "accessModes": [
        "ReadWriteMany"
      ],
      "resources": {
        "requests": {
          "storage": "70Gi"
        }
      },
      "volumeMode": "Block"
    }
  }
}